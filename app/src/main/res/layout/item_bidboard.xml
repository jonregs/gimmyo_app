<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<data>
    <variable
        name="bidItem"
        type="com.gimmyo.app.bidboard.model.BidBoardViewModel"/>
</data>
        <android.support.v7.widget.CardView
            android:id="@+id/bid_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardElevation="10dp"
            android:layout_margin="6dp">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:image="@{bidItem.bidOfferImage}"/>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white_transparent"
                android:layout_gravity="bottom">

                <TextView
                    android:id="@+id/bidOfferId"
                    android:layout_width="229dp"
                    android:layout_height="45dp"
                    android:text="@{bidItem.bidOfferId}"
                    android:layout_marginLeft="4dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="8dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintHorizontal_bias="0.007"
                    />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="26dp"
                    android:layout_height="27dp"
                    app:srcCompat="@android:drawable/ic_search_category_default"
                    app:layout_constraintRight_toLeftOf="@+id/editText2"
                    android:layout_marginRight="4dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="2dp"/>

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="25dp"
                    android:layout_height="27dp"
                    app:srcCompat="@android:drawable/ic_lock_power_off"
                    android:layout_marginRight="4dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="2dp"/>

                <TextView
                    android:id="@+id/editText"
                    android:layout_width="26dp"
                    android:layout_height="27dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="20"
                    app:layout_constraintRight_toLeftOf="@+id/imageView2"
                    android:layout_marginRight="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="2dp"/>

                <TextView
                    android:id="@+id/editText2"
                    android:layout_width="26dp"
                    android:layout_height="27dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="10"
                    app:layout_constraintRight_toLeftOf="@+id/imageView3"
                    android:layout_marginRight="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="2dp"/>

            </android.support.constraint.ConstraintLayout>

            <net.cachapa.expandablelayout.ExpandableLayout
                android:id="@+id/expandable_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#eee"
                app:el_duration="300"
                app:el_expanded="false"
                app:el_parallax="0.5">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="test" />

                    <TextView
                        android:id="@+id/text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text1"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="test2" />

                </RelativeLayout>

            </net.cachapa.expandablelayout.ExpandableLayout>

        </android.support.v7.widget.CardView>
</layout>